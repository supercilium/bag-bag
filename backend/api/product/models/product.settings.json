{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "category": {
      "model": "category"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "published"
      ],
      "default": "published",
      "required": true
    },
    "brand": {
      "via": "products",
      "model": "brand"
    },
    "discount": {
      "type": "integer",
      "max": 100,
      "min": 0
    },
    "condition": {
      "type": "enumeration",
      "enum": [
        "new",
        "ex"
      ],
      "default": "new",
      "required": true
    },
    "color": {
      "model": "color"
    },
    "dimension": {
      "type": "component",
      "repeatable": false,
      "component": "dimensions.dimension",
      "required": true
    },
    "year": {
      "type": "integer",
      "required": true,
      "min": 1900,
      "max": 2300,
      "default": 2020
    },
    "orders": {
      "via": "products",
      "private": true,
      "collection": "order"
    },
    "users": {
      "private": true,
      "via": "favorites",
      "plugin": "users-permissions",
      "collection": "user"
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "private": true
    }
  }
}
