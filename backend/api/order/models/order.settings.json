{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "products": {
      "via": "orders",
      "collection": "product",
      "dominant": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "new",
        "paid",
        "processing",
        "pending_issuance",
        "delivering",
        "return",
        "cancelled",
        "done"
      ],
      "required": true,
      "default": "new"
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "cash",
        "card"
      ],
      "required": true,
      "default": "card"
    },
    "promocode": {
      "model": "promocode",
      "via": "orders"
    },
    "user": {
      "via": "orders",
      "plugin": "users-permissions",
      "private": true,
      "model": "user"
    },
    "shippingMethod": {
      "type": "enumeration",
      "enum": [
        "pickup",
        "shipping"
      ],
      "required": true,
      "default": "shipping"
    },
    "executed_date": {
      "type": "datetime"
    },
    "discount": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "delivery_cost": {
      "type": "decimal",
      "min": 0,
      "default": 0
    }
  }
}
